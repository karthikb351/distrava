{
  "name": "distrava",
  "version": "0.0.1",
  "description": "A discord bot for Strava",
  "main": "build/src/index.js",
  "scripts": {
    "start": "functions-framework --source=build/src/ --target=distrava",
    "watch": "concurrently \"tsc -w\" \"nodemon --watch ./build/ --exec npm run start\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "rm -rf build && npm run compile && gcloud functions deploy distrava --runtime nodejs14 --trigger-http --allow-unauthenticated",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karthikb351/distrava.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/karthikb351/distrava/issues"
  },
  "homepage": "https://github.com/karthikb351/distrava#readme",
  "dependencies": {
    "@google-cloud/datastore": "^6.4.2",
    "@google-cloud/functions-framework": "^1.7.1",
    "@types/express": "^4.17.11",
    "@types/node": "^14.11.2",
    "axios": "^0.21.1",
    "concurrently": "^6.0.0",
    "discord-interactions": "^2.0.2",
    "express": "^4.17.1",
    "gts": "^3.1.0",
    "nodemon": "^2.0.7",
    "strava-v3": "^2.0.9",
    "tweetnacl": "^1.0.3",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "discord-slash-commands-client": "^1.2.1"
  }
}
